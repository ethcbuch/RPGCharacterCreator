<Application x:Class="RPGCharacterCreator.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:RPGCharacterCreator"
             xmlns:viewmodel="clr-namespace:RPGCharacterCreator.WVVM.ViewModel"
             xmlns:view="clr-namespace:RPGCharacterCreator.WVVM.View"
             StartupUri="MainWindow.xaml">
    
    <Application.Resources>

        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Theme/MenuButtonTheme.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <DataTemplate DataType="{x:Type viewmodel:BioViewModel}">
                <view:BioView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type viewmodel:ClassViewModel}">
                <view:ClassView/>
            </DataTemplate>



        </ResourceDictionary>

    </Application.Resources>
</Application>
