<Window x:Class="RPGCharacterCreator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RPGCharacterCreator"
        mc:Ignorable="d"
        Height="800" Width="1040"
        WindowStyle="None"
        
        ResizeMode="CanMinimize"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStartupLocation="CenterScreen"
        >

    <Border Background="#424549"
            CornerRadius="7">

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300">
                </ColumnDefinition>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="150">
                </RowDefinition>
            </Grid.RowDefinitions>
            <Border Background="#36393E"
                    Margin="0,0,-740,75"
                    Grid.Row="1">
                <Image Source="/Images/Logo2.png"
                   Height="100"
                   Width="292"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top" Margin="10,10,0,0"/>
            </Border>

        </Grid>

    </Border>
</Window>
