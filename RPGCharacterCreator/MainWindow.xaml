<Window x:Class="RPGCharacterCreator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RPGCharacterCreator"
        mc:Ignorable="d"
        Title="MainWindow" Height="720" Width="1280"
        WindowStyle="None"
        Background="Transparent"
        AllowsTransparency="True"
        >
    <Border 
            x:Name="windowBackground"
            Background="#424549" 
            CornerRadius="10">
        <Grid>
            <Border 
                    x:Name="headerBorder"
                    Background="#36393E" Grid.ColumnSpan="2"
                    >
                <Image HorizontalAlignment="Left" Height="100" VerticalAlignment="Center" Width="239" Source="/Images/LogoStacked.png"/>
            </Border>

            <Thumb x:Name="headerThumb"
                   Opacity="0"
                   Background="{x:Null}"
                   Foreground="{x:Null}"
                   Grid.ColumnSpan="2" DragDelta="headerThumb_DragDelta"
                    />

            <StackPanel Grid.Column="2"
                        Orientation="Horizontal">
                <RadioButton x:Name="bioButton"
                             Content="CHARACTER"
                             Height="80"
                             Width="150" 
                             FontFamily="Franklin Gothic Heavy" 
                             Foreground="White"
                             HorizontalAlignment="Left"
                             Style="{StaticResource MenuButtonMenu }" FontSize="24"/>

                <RadioButton x:Name="portraitButton"
                             Content="PORTRAIT"
                             Height="80"
                             Width="150" 
                             FontFamily="Franklin Gothic Heavy" 
                             Foreground="White"
                             HorizontalAlignment="Left"
                             Style="{StaticResource MenuButtonMenu }" FontSize="24"/>
                <RadioButton x:Name="classButton"
                             Content="CLASS"
                             Height="80"
                             Width="150" 
                             FontFamily="Franklin Gothic Heavy" 
                             Foreground="White"
                             HorizontalAlignment="Left"
                             HorizontalContentAlignment="Center"
                             Style="{StaticResource MenuButtonMenu }" FontSize="24"/>
            </StackPanel>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250">
                </ColumnDefinition>
                <ColumnDefinition Width="1030"/>

            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="80"/>
            </Grid.RowDefinitions>

        

        </Grid>
    </Border>
</Window>
